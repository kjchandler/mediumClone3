<!DOCTYPE html>
<html>
<head>
  <title>MediumClone3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Komoka', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Home', root_path %></li>
        <!-- check for authenicatation others will be redirected to to the log in page -->
        <% if user_signed_in? %>
          <li><%= link_to 'Secret', secret_path %></li>
        <% end %>

        <% if user_signed_in? %>
        <li><%= link_to 'secret',
        secret_path %></li>
        <% end %>

      </ul>


     <ul class="nav navbar-nav pull-right">
       <% if user_signed_in? %><!-- this is a Devise helper to tell you if a user is logged in -->
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">

            <!-- this returns either a record or nill -->
              <%= current_user.name %>
                <span class="caret"></span>
            </a>
              <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <!-- destroy_user_session_path requires DELETE HTTP method by default. You can modify this in devise.rb -->
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
  
</div>

<%= yield :top_content %>

<div class ="container">
	<h1><%=yield :header %></h1>
  <%= yield %>
</div>

<div class="page-header">
  <h1><%= yield :page_header %><h1>
</div>



<div id="footer">
  <div class="container">

    <p class="text-muted"><a href="http://www.middlesexcentre.on.ca" target="_blank">Middlesex Centre</a></p>

    <p class="text-muted">Created by <a href="http://playmygolfball.com" target="_blank">Kelly Chandler</a></p>
 
  </div>
</div>

</body>
</html>
